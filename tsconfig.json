{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution": "Node",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "types": [
            "@types/node"
        ],
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
        ],
        "baseUrl": ".",
        "esModuleInterop": true,
    },
    "exclude": [
        "node_modules",
        "src/template/*",
        "examples"
    ],
    "include": [
        "src/**/*"
    ]
}